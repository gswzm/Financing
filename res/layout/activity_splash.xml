<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/write">

    
     <ImageView
        android:id="@+id/iv_jia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/jia" />
     <ImageView
        android:id="@+id/iv_ting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_jia"
        android:layout_toRightOf="@+id/iv_jia"
        android:src="@drawable/ting" />

    <ImageView
        android:id="@+id/iv_li"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_ting"
        android:layout_centerHorizontal="true"
        android:src="@drawable/li" />

    <ImageView
        android:id="@+id/iv_cai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_li"
        android:layout_toLeftOf="@+id/iv_tong"
        android:src="@drawable/cai" />

    <ImageView
        android:id="@+id/iv_tong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_cai"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:src="@drawable/tong" />
    <ImageView
        android:id="@+id/iv_a2"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        android:src="@drawable/a2" />
    <ImageView 
        android:id="@+id/english"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:src="@drawable/a4"/>   
</RelativeLayout>
